<div>
  <%= render "article_links", action: :show %>
</div>

<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter</strong>
    <%= comment.commenter %>
  </p>
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

<% end %>

<h2>Add a comment</h2>
<%= form_with model: [ @article, @article.comments.build] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.textarea :body %>
  </p>

  <p><%= form.submit %></p>
<% end %>
