<div>
  <%= render "article_links", action: :show %>
</div>

<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<h2>Comments</h2>
<% if @article.comments.empty? %>
  <h4><%= "No comments" %></h4>
<% else %>
  <h4><%= pluralize(@article.comments.count, "comment") %></h4>
  <%= render @article.comments %>
<% end %>

<h2>Add a comment</h2>
<%= render "comments/form", article: @article %>
